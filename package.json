{
  "name": "koa-router-swagger-decorators",
  "version": "5.0.1",
  "description": "A Typescript decorative library for Koa-router integrating swagger.",
  "main": "lib/index.js",
  "module": "src/index.ts",
  "scripts": {
    "start": "ts-node-dev --prefer-ts --debug --transpile-only --inspect=0.0.0.0:6788 ./tests/e2e",
    "prepare": "git init && git config core.hooksPath .githooks",
    "test": "cross-env-shell NODE_ENV=unit-test PORT=10000 nyc mocha -r ts-node/register tests/spec/**/*.spec.ts --timeout 200000 --exit",
    "build": "tsc",
    "preversion": "npm test",
    "version": "npm run build && git add -A",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "koa-router",
    "swagger",
    "decorator",
    "typescript",
    "router",
    "koa"
  ],
  "author": "Colin <mail@luozhihua.com>",
  "license": "ISC",
  "types": "./declarations",
  "gitHooks": {},
  "dependencies": {
    "koa-swagger-decorator": "^1.6.8",
    "merge": "^1.2.1",
    "promise-events": "^0.1.8"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^5.2.7",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "cross-env": "^5.2.1",
    "istanbul": "^0.4.5",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "lint-staged": "^8.2.1",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "nyc": "^13.3.0",
    "supertest": "^4.0.2",
    "ts-lint": "^4.5.1",
    "ts-node": "^8.7.0",
    "tslint": "^5.20.1",
    "typescript": "^3.8.3",
    "yorkie": "^2.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
