{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "declaration": true,
    "declarationDir": "./declarations",
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "types": [
    "node"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "node_modules/ajv-keywords/src/index.ts",
    "src/utils/async-emitter.js"
  ],
  "exclude": [
    "node_modules",
    "declarations",
    "tests",
    "@types",
    "release"
  ],
  "compileOnSave": false
}
